{% extends 'base.html.twig' %}

{% block title %}Admin-Bereich{% endblock %}

{% block body %}    
    <div class="row mb-1">        
        <div class="col-12 text-center">
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link text-reset" href="{{ path('admin_index') }}">Runden verwalten</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active text-reset" href="#">Einstellungen</a>
                </li>                
            </ul>
            <h2>
                Einstellungen
            </h2>
            <form method="post" action="{{ path("admin_settings_update") }}" class="text-left">
                <div class="form-group">
                    <label for="targetAmount">Zielbetrag (KSh)</label>
                    <input type="number" name="settings[target_amount]" id="targetAmount" class="form-control" value="{{ settings['target_amount'] | default(0) }}" min="0">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Speichern</button>
                    <input type="hidden" name="token" value="{{ csrf_token('update-settings') }}"/>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
